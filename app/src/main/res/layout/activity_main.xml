<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background_1"
    >

    <TextView
        android:id="@+id/textView_slogan1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:text="Less Hassle"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="italic"
        android:background="#10ffffff"
        android:drawableLeft="@drawable/hassle"
        android:drawablePadding="10dp"
        />

    <TextView
        android:id="@+id/textView_slogan2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_slogan1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:text="More Profit"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="italic"
        android:background="#10ffffff"
        android:drawableRight="@drawable/profit"
        android:drawablePadding="10dp"
        />

    <TextView
        android:id="@+id/textView_appName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_slogan2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="44dp"
        android:layout_marginRight="10dp"
        android:ellipsize="none"
        android:fontFamily="sans-serif-condensed-light"
        android:padding="10dp"
        android:rotationX="13"
        android:singleLine="false"
        android:text="SHOP MANAGER"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/teal_700"
        android:textSize="70sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/textView_appName"
        android:layout_centerHorizontal="true"
        android:id="@+id/star_layout"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/star"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/star"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/star"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/star"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/star"
            />


    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reg_button"
        android:layout_below="@id/star_layout"
        android:layout_marginTop="114dp"
        android:layout_centerHorizontal="true"
        android:text="Register"
        android:padding="20dp"
        android:textSize="30dp"
        android:drawableLeft="@drawable/filled_star"
        android:drawableRight="@drawable/filled_star"
        />

</RelativeLayout>